<div class="mui-col-sm-12 mui-col-xs-12 mui-col-md-6 mui--pull-right">
  <form {{action 'add' on='submit'}}>
    <div class="mui-textfield">
      <label>Comment ({{charsLeft}} char{{if (not-eq charsLeft 1) 's'}} left)</label>
      {{typeahead-textarea value=comment.content data=data key='@' maxlength=maxLength rows=3 required=true}}
    </div>
    <button type="submit" class="mui-btn mui-btn--primary mui--pull-right">
      Add comment
    </button>
  </form>
</div>
