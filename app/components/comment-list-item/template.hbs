<div class="comment-list-item-header">
  #{{comment.id}}
  <span class="mui--hidden-md mui--hidden-sm mui--hidden-xs">
    by {{user-alias comment.user}}
    {{#if (eq owner.id comment.user.id)}}
      <span title="Original Poster">(OP)</span>
    {{/if}}
  </span>
  created at {{moment-format comment.created 'DD.MM.YYYY HH:mm'}}
</div>
<div class="comment-list-item-body">
  {{#each parts as |part|}}
    {{comment-content-part part
      comment=comment
      on-mouse-enter=highlightComment
      on-mouse-leave=unhighlightComment
    }}
  {{/each}}
</div>
