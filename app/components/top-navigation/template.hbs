<div class="container">
  <header class="navbar-header">
    <button
    type="button"
    class="navbar-toggle collapsed"
    data-toggle="collapse"
    data-target="#navbar-collapse"
    aria-expanded="false"
    >
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    {{#link-to 'index' class='navbar-brand'}}AnonBoard{{/link-to}}
  </header>

  <section class="collapse navbar-collapse" id="navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
      {{#each displayedEntries as |topic|}}
        {{#active-link}}{{#link-to 'topic' topic.identifier}}{{topic.name}}{{/link-to}}{{/active-link}}
      {{/each}}
      {{#if dropdownEntries}}
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">more...<span class="caret"></span></a>
            <ul class="dropdown-menu">
              {{#each dropdownEntries as |topic|}}
                {{#active-link}}{{#link-to 'topic' topic.identifier}}{{topic.name}}{{/link-to}}{{/active-link}}
              {{/each}}
            </ul>
        </li>
      {{/if}}
    </ul>
  </section>
</div>
