{{thread-body model}}

{{#comment-list model.comments as |comment|}}
  {{comment-list-item comment
    owner              = model.user
    current            = highlighted
    highlightComment   = (action (mut highlighted))
    unhighlightComment = (action (mut highlighted) null)
  }}
{{/comment-list}}

{{comment-form comments=model.comments on-submit=(route-action 'addComment')}}
