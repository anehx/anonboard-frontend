{{thread-body model.thread}}

<div class="mui-divider"></div>

{{#comment-list model.thread.comments as |comment|}}
  {{comment-list-item comment
    owner              = model.thread.user
    current            = highlighted
    highlightComment   = (action (mut highlighted))
    unhighlightComment = (action (mut highlighted) null)
  }}
{{/comment-list}}

{{comment-form model.comment
  comments=model.thread.comments
  loading=loading
  on-submit=(route-action 'save')
}}
